<header class="header" itemscope itemtype="http://schema.org/WPHeader">
	{% block header %}

		<div class="title-area">
			<a href="{{ site.link }}">
				{% if is_front_page %}
					<h1 itemprop="headline">{{ site.name }}</h1>
				{% else %}
					<p itemprop="headline">{{ site.name }}</p>
				{% endif %}
			</a>
			<p class="description" itemprop="description">{{ site.description }}</p>
		</div>

		<nav id="nav-main" class="nav-main" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
			<ul class="nav">
			{% for item in menu.get_items %}
				<li class="nav-item {{item.classes | join(' ')}}">
					<a class="nav-link" href="{{item.get_link}}" title="{{item.title}}" target="{{ item.is_external ? '_blank' : '_self' }}" itemprop="url">
						<span itemprop="name">{{item.title}}</span>
					</a>
					{% if item.get_children %}
						<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item">
								<a class="nav-link" href="{{child.get_link}}" title="{{child.title}}" target="{{ item.is_external ? '_blank' : '_self' }}" itemprop="url">
									<span itemprop="name">{{child.title}}</span>
								</a>
							</li>
						{% endfor %}
						</ul>
					{% endif %}
				</li>
			{% endfor %}
			</ul>
		</nav>
		<button type="button" class="button" data-toggle="offCanvasRight">Open Menu</button>
	{% endblock %}
</header>